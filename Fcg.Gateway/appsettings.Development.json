{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Debug",
      "Yarp.ReverseProxy.Forwarder": "Debug",
      "Yarp.ReverseProxy.Routing": "Debug"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": { "Path": "/users/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/users" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/users"
          }
        ]
      },
      "games-route": {
        "ClusterId": "games-cluster",
        "Match": { "Path": "/games/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/games" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/games"
          }
        ]
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": { "Path": "/payments/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/payments" },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/payments"
          }
        ]
      }
    },
    "Clusters": {
      "users-cluster": {
        "Destinations": {
          "d1": { "Address": "http://fcg-users" }
        }
      },
      "games-cluster": {
        "Destinations": {
          "d1": { "Address": "http://fcg-games" }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "d1": { "Address": "http://fcg-payments" }
        }
      }
    }
  }
}
